{
  "manifest_version": 3,
  "name": "A股行情助手",
  "version": "1.1",
  "description": "实时查看A股股票涨跌情况，工作摸鱼必备神器",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://push2.eastmoney.com/*",
    "https://qt.gtimg.cn/*",
    "https://hq.sinajs.cn/*",
    "https://suggest3.sinajs.cn/*",
    "https://finance.sina.com.cn/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "A股行情助手"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 